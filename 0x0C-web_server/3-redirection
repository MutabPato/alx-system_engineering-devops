#!/usr/bin/env bash
#Install nginx web server

apt-get update
apt-get install -y nginx
echo "Hello World!" > /var/www/html/index.html
service nginx start
sed -i "/server_name _;/ a\\\trewrite ^/redirect_me https://www.youtube.com/watch?v=QH2-TGU1wu4 permanent;" /etc/nginx/site-enabled/default
service nginx restart
